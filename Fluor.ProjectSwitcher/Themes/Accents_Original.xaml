<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--ACCENT COLORS-->
    <!--<Color x:Key="HighlightColor">#FF00457D</Color>-->
    <Color x:Key="HighlightColor">#FF333337</Color>

    <!--80%-->
    <Color x:Key="AccentColor">#FF3F3F46</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#FF5C5C66</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#FF8E8E9C</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#FFEDEDED</Color>

    <!-- re-set brushes too -->
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}" />
    <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentColorBrush2" Color="{StaticResource AccentColor2}"/>
    <SolidColorBrush x:Key="AccentColorBrush3" Color="{StaticResource AccentColor3}"/>
    <SolidColorBrush x:Key="AccentColorBrush4" Color="{StaticResource AccentColor4}"/>

    <SolidColorBrush x:Key="WindowTitleColorBrush" Color="{StaticResource HighlightColor}" />

    <SolidColorBrush x:Key="AccentSelectedColorBrush" Color="White" />

    <LinearGradientBrush x:Key="ProgressBrush" EndPoint="0.001,0.5" StartPoint="1.002,0.5">
        <GradientStop Color="{StaticResource HighlightColor}" Offset="0" />
        <GradientStop Color="{StaticResource AccentColor3}" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CheckmarkFill" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="RightArrowFill" Color="{StaticResource AccentColor}" />

    <Color x:Key="WindowBackgroundColor">#FFCECEE0</Color>
    <SolidColorBrush x:Key="WindowBackgroundColorBrush" Color="{StaticResource WindowBackgroundColor}" />

    <!-- SubColor used for focus points such as buttons. Meant to be used to draw the user's attention -->
    <Color x:Key="SubColor">#FF00A8CD</Color>
    <!--60%-->
    <Color x:Key="SubColor2">#9900A8CD</Color>
    <!--40%-->
    <Color x:Key="SubColor3">#6600A8CD</Color>
    <!--20%-->
    <Color x:Key="SubColor4">#3300A8CD</Color>
    
    <SolidColorBrush x:Key="SubColorBrush" Color="{StaticResource SubColor}"/>
    <SolidColorBrush x:Key="SubColorBrush2" Color="{StaticResource SubColor2}"/>
    <SolidColorBrush x:Key="SubColorBrush3" Color="{StaticResource SubColor3}"/>
    <SolidColorBrush x:Key="SubColorBrush4" Color="{StaticResource SubColor4}"/>

    <Color x:Key="CloseButtonBackGroundColor">#FFEDEDED</Color>
    <SolidColorBrush x:Key="CloseButtonBackGroundBrush" Color="{StaticResource CloseButtonBackGroundColor}"/>

    <!-- Text Colours & brushes -->
    <Color x:Key="TextBlackMain">Black</Color>
    <Color x:Key="TextBlack87">#DD1E1E1E</Color>
    <Color x:Key="TextBlack54">#891E1E1E</Color>

    <SolidColorBrush x:Key="TextBlackMainBrush" Color="{StaticResource TextBlackMain}"/>
    <SolidColorBrush x:Key="TextBlack87Brush" Color="{StaticResource TextBlack87}"/>
    <SolidColorBrush x:Key="TextBlack54Brush" Color="{StaticResource TextBlack54}"/>
</ResourceDictionary>